<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/create_account"
        android:id="@+id/txtCreateTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/user_name"
        android:id="@+id/txtUser"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/txtCreateTitle"
        android:layout_toLeftOf="@+id/txtCreateTitle"
        android:layout_toStartOf="@+id/txtCreateTitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUser"
        android:layout_alignBottom="@+id/txtUser"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editEmailCreate"
        android:layout_alignStart="@+id/editEmailCreate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/email"
        android:id="@+id/txtEmail"
        android:layout_alignBottom="@+id/editEmailCreate"
        android:layout_toLeftOf="@+id/txtCreateTitle"
        android:layout_toStartOf="@+id/txtCreateTitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editEmailCreate"
        android:layout_below="@+id/txtUser"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txtConfirmPass"
        android:layout_toRightOf="@+id/txtConfirmPass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/password"
        android:id="@+id/txtPasswordCreate"
        android:layout_above="@+id/editConfirmPass"
        android:layout_toLeftOf="@+id/txtCreateTitle"
        android:layout_toStartOf="@+id/txtCreateTitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editPass"
        android:layout_below="@+id/txtEmail"
        android:layout_alignRight="@+id/editEmailCreate"
        android:layout_alignEnd="@+id/editEmailCreate"
        android:layout_toRightOf="@+id/txtConfirmPass"
        android:layout_toEndOf="@+id/txtConfirmPass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/confirm_password"
        android:id="@+id/txtConfirmPass"
        android:layout_below="@+id/txtPasswordCreate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editConfirmPass"
        android:layout_below="@+id/editPass"
        android:layout_toRightOf="@+id/txtConfirmPass"
        android:layout_alignRight="@+id/editPass"
        android:layout_alignEnd="@+id/editPass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/btnReg"
        android:layout_below="@+id/txtConfirmPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>