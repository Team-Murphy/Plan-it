<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.plan_it.mobile.plan_it.ItemListActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/event_name"
        android:id="@+id/item_list_text_view"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>
<LinearLayout
    android:id="@+id/layout_item_list_headers"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:layout_below="@+id/item_list_text_view">
    <TextView
        android:background="@drawable/back"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_weight=".3"
        android:layout_height="match_parent"
        android:text="@string/item"
        android:id="@+id/item_list_label_item"
        android:textSize="15sp"/>
    <TextView
        android:background="@drawable/back"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_weight=".3"
        android:layout_height="match_parent"
        android:text="@string/supplying"
        android:id="@+id/item_list_label_supplying"
        android:textSize="15sp"/>
    <TextView
        android:background="@drawable/back"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_weight=".20"
        android:layout_height="match_parent"
        android:text="@string/estimated_cost"
        android:id="@+id/item_list_label_estimated_cost"
        android:textSize="15sp"/>
    <TextView
        android:background="@drawable/back"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_weight=".20"
        android:layout_height="match_parent"
        android:text="@string/actual_cost"
        android:id="@+id/item_list_label_estimated_actual_cost"
        android:textSize="15sp"/>
</LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"
        android:id="@+id/item_list_recycler_view"
        android:paddingBottom="100dp"
        android:clipToPadding="false"
        android:layout_below="@+id/layout_item_list_headers"
        android:layout_above="@+id/layout_item_list_footers"
        />
    <LinearLayout
        android:background="@drawable/back"
        android:id="@+id/layout_item_list_footers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/layout_item_list_split_cost">
        <TextView
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="50dp"
            android:text="@string/add_item"
            android:textStyle="bold"
            android:id="@+id/item_list_add_item_button"
            android:textSize="20sp"/>
        <TextView
            android:background="@drawable/back"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="50dp"
            android:text="@string/total"
            android:id="@+id/item_list_text_total"
            android:textSize="15sp"/>
        <TextView
            android:background="@drawable/back"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:layout_height="50dp"
            android:text="$120.00"
            android:id="@+id/item_list_text_estimated_cost"
            android:textSize="15sp"/>
        <TextView
            android:background="@drawable/back"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:layout_height="50dp"
            android:text="$100.00"
            android:id="@+id/item_list_text_estimated_actual_cost"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/back"
        android:id="@+id/layout_item_list_split_cost"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:background="@drawable/back"
            android:id="@+id/layout_item_list_split"
            android:layout_width="211dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/number_split_text_label"
                android:layout_width="50dp"
                android:text="@string/split"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/remove_split_button"
                android:clickable="true"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_remove_blue_24dp"/>
            <TextView
                android:id="@+id/number_split_text"
                android:layout_width="50dp"
                android:text="0"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/add_split_button"
                android:clickable="true"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add_circle_blue_24dp"/>
        </LinearLayout>
        <TextView
            android:background="@drawable/back"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:layout_height="50dp"
            android:text="$120.00"
            android:id="@+id/item_list_text_cost"
            android:textSize="15sp"/>
        <TextView
            android:background="@drawable/back"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:layout_height="50dp"
            android:text="$100.00"
            android:id="@+id/item_list_text_actual_cost"
            android:textSize="15sp"/>

    </LinearLayout>

</RelativeLayout>
